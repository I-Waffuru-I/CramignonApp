<Page x:Class="CramignonApp.Pages.PeoplePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CramignonApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PeoplePage">
    

    
    <Grid Background="DarkSalmon">
        <ListView x:Name="peopleListView">
            <ListView.View>
                <GridView AllowsColumnReorder="False" ColumnHeaderToolTip="All known people">
                    <GridViewColumn Header="First name" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Last name" DisplayMemberBinding="{Binding LastName}"/>

                </GridView>
            </ListView.View>
        </ListView>
        
    </Grid>
</Page>
